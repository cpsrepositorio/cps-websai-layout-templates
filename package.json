{
  "name": "cps-websai-layout-templates",
  "version": "1.0.0",
  "description": "Conjunto de templates de layout aplicando o CPS Design System Ã s interfaces do WebSAI.",
  "author": "Erick Eduardo Petrucelli <erick.petrucelli@cps.sp.gov.br>",
  "license": "MIT",
  "private": true,
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "dev": "parcel src/index.html --dist-dir cps-websai-layout-templates --open",
    "build": "parcel build src/index.html --dist-dir cps-websai-layout-templates --public-url /cps-websai-layout-templates",
    "start": "http-server -b -o cps-websai-layout-templates",
    "deploy": "yarn build && gh-pages -d cps-websai-layout-templates"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "parcel": "^2.7.0"
  },
  "devDependencies": {
    "gh-pages": "^4.0.0",
    "parcel-namer-custom": "^0.2.0",
    "posthtml": "^0.16.6",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^1.7.4",
  },
  "@parcel/transformer-css": {
    "errorRecovery": true,
    "drafts": {
      "nesting": true
    }
  },
  "parcel-namer-custom": {
    "favicon.ico": "favicon.ico",
    ".svg$": "[folder]/[name].[hash].[type]",
    ".jpg$": "[folder]/[name].[hash].[type]",
    ".png$": "[folder]/[name].[hash].[type]",
    ".css$": "styles/[name].[hash].[type]",
    ".js$": "scripts/[name].[hash].[type]"
  }
}